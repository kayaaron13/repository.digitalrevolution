import pickle

import xbmc
import xbmcaddon
import xbmcgui
import urllib
from language import get_string as _
from resources.lib.util.url import get_addon_url

from ..plugin import Plugin


class Eimify(Plugin):
    name = "eimify"
    priority = 0

    def display_list(self, items, content_type):
        eim_items = convert_items_to_eim(items, content_type)
        script = "RunScript(script.extendedinfo,info=jenlist, items={0})"
        xbmc.executebuiltin(script.format(urllib.quote_plus(pickle.dumps(eim_items))))
        return True


def convert_items_to_eim(items, media_type):
    eim_items = []
    for item in items:
        path = get_addon_url(item["mode"], item["url"])
        result = {
            "path": path,
            "icon": item["icon"],
            "thumb": item["icon"],
            "label": item["label"],
            "fanart": item["fanart"],
            "media_type": media_type,
        }
        if "imdb" in item:
            imdb = item["imdb"]
            if imdb.startswith("tt"):
                imdb = imdb[2:]
            result["id"] = imdb
        eim_items.append(result)
    return eim_items
